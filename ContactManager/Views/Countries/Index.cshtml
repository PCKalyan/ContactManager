@model IEnumerable<ContactManager.Models.Country>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Countries</h3>

<script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
<p>
    <a asp-action="Create"><i class='fas fa-plus-circle'></i>Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CountryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ZipCodeStart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ZipCodeEnd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CountryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ZipCodeStart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ZipCodeEnd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PkcountryId"><i class='fas fa-edit'></i>Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PkcountryId"><i class='far fa-address-card'></i>Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PkcountryId"><i class='fas fa-trash'></i>Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
