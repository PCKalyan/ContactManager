@model ContactManager.Models.Country

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Country</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CountryName" class="control-label"></label><span class="text-danger">*</span>
                <input asp-for="CountryName" class="form-control" placeholder="Country Name"/>
                <span asp-validation-for="CountryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ZipCodeStart" class="control-label"></label><span class="text-danger">*</span>
                <input asp-for="ZipCodeStart" class="form-control" placeholder="Starting Zipcode" />
                <span asp-validation-for="ZipCodeStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ZipCodeEnd" class="control-label"></label><span class="text-danger">*</span>
                <input asp-for="ZipCodeEnd" class="form-control" placeholder="Ending Zipcode" />
                <span asp-validation-for="ZipCodeEnd" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
